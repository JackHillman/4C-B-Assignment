<Window x:Class="Assignment.Summary"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment"
        mc:Ignorable="d"
        Title="Summary" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Stretch">
            <GroupBox Header="Sales Count">
                <Label x:Name="salesCount" Content="" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top"/>
            </GroupBox>
            <GroupBox Header="Sales Total">
                <Label x:Name="salesTotal" Content="" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top"/>
            </GroupBox>
            <GroupBox Header="Sales Average">
                <Label x:Name="salesAverage" Content="" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top"/>
            </GroupBox>
            <Button x:Name="close" Margin="10" Content="Close" Click="close_Click"/>
        </StackPanel>

    </Grid>
</Window>
